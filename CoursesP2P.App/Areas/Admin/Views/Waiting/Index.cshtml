@model IEnumerable<CourseViewModel>

<div class="container">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4">
                <figure class="card card-coin card-plain">
                    <div class="img-wrap">
                        <a asp-area="" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">
                            <img src="@course.Image" style="width:348px;height:220px;">
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                @if (course.Name.Length > 29)
                                {
                                    <h4 rel="tooltip" title="@course.Name">@course.ShortName</h4>
                                }
                                else
                                {
                                    <h4>@course.Name</h4>
                                }
                                <h5>от @course.InstructorFullName</h5>
                                <hr class="line-primary">
                            </div>
                        </div>
                        <div class="row">
                            <ul class="list-group">
                                <li class="list-group-item">@Html.DisplayFor(e => course.Category)</li>
                                <li class="list-group-item">@course.Lectures.Count Лекции</li>
                                <li class="list-group-item text-warning">&euro; @course.Price</li>
                            </ul>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-area="" asp-controller="Lectures" asp-action="Index" asp-route-id="@course.Id" class="btn btn-info btn-sm">Лекции</a>
                            <a asp-area="Admin" asp-controller="Courses" asp-action="Approve" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Одобри</a>
                        </div>
                    </div>
                </figure>
            </div>
        }
    </div>
</div>
