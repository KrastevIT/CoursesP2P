@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="col-lg-5 col-md-8 mx-auto">
        <section>
            <form id="profile-form" method="post">
                <h4 class="text-center">Профил</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Име</label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Фамилия</label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Година на раждане</label>
                    <input asp-for="Input.Birthday" class="form-control" />
                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Град</label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Запиши</button>
                </div>
            </form>
        </section>
        <div class="col-md-6 col-md-offset-2">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}