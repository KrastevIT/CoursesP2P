@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Профил</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form id="profile-form" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <label class="col-4 col-form-label">Име</label>
                                    <div class="col-8">
                                        <input asp-for="Input.FirstName" class="form-control here" type="text" />
                                    </div>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label class="col-4 col-form-label">Фамилия</label>
                                    <div class="col-8">
                                        <input asp-for="Input.LastName" class="form-control here" type="text" />
                                    </div>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label class="col-4 col-form-label">Година на раждане</label>
                                    <div class="col-8">
                                        <input asp-for="Input.Birthday" class="form-control here" />
                                    </div>
                                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label class="col-4 col-form-label">Град</label>
                                    <div class="col-8">
                                        <input asp-for="Input.City" class="form-control here" type="text" />
                                    </div>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-4 col-8">
                                        <button id="update-profile-button" type="submit" class="btn btn-primary">Запиши промените</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




