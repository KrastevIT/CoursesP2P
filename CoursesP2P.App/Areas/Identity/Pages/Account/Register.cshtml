@page
@model RegisterModel
@using Microsoft.Extensions.Options
@inject IOptions<ReCAPTCHASettings> GooglereCAPTCHA
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="col-lg-5 col-md-8 mx-auto">
        <h4 class="text-center">Регистрация</h4>
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label><i class="tim-icons icon-single-02"></i> Име</label>
                    <input asp-for="Input.FirstName" class="form-control">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label><i class="tim-icons icon-single-02"></i> Фамилия</label>
                    <input asp-for="Input.LastName" class="form-control">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label><i class="tim-icons icon-email-85"></i> Имейл адрес</label>
                    <input asp-for="Input.Email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label> <i class="tim-icons icon-calendar-60"></i> Година на раждане</label>
                    <input asp-for="Input.Birthday" class="form-control">
                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label><i class="tim-icons icon-square-pin"></i> Град</label>
                    <input asp-for="Input.City" class="form-control">
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label><i class="tim-icons icon-lock-circle"></i> Парола</label>
                    <input asp-for="Input.Password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label><i class="tim-icons icon-lock-circle"></i> Потвърдете паролата</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Input.Token" />
                <div class="text-center">
                    <hr />
                    <p>
                        Натискайки бутона "Регистрация", вие потвърждавате, че сте запознати и съгласни с нашата
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">политика за опазване на личните данни</a>
                    </p>
                    <hr />
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-info">Регистрация</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<script src="https://www.google.com/recaptcha/api.js?render=@GooglereCAPTCHA.Value.ReCAPTCHA_Site_Key"></script>
<script>
    grecaptcha.ready(function () {
        grecaptcha.execute('@GooglereCAPTCHA.Value.ReCAPTCHA_Site_Key', { action: 'homepage' }).then(function (token) {
            $('#Input_Token').val(token);
        });
    });
</script>