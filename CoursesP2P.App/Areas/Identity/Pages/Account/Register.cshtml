            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5 col-md-6 offset-lg-0 offset-md-3">
                            <div id="square7" class="square square-7"></div>
                            <div id="square8" class="square square-8"></div>
                            <div class="card card-register">
                                @*<div class="card-header">
                                        <img class="card-img" src="~/assets/img/square1.png" alt="Card image">
                                        <h4 class="card-title">Регистрация</h4>
                                    </div>*@
                                <div class="card-body">
                                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="tim-icons icon-single-02"></i>
                                                </div>
                                            </div>
                                            <input asp-for="Input.FirstName" class="form-control" placeholder="Име">
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="tim-icons icon-single-02"></i>
                                                </div>
                                            </div>
                                            <input asp-for="Input.LastName" class="form-control" placeholder="Фамилия">
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="tim-icons icon-email-85"></i>
                                                </div>
                                            </div>
                                            <input asp-for="Input.Email" placeholder="Имейл адрес" class="form-control">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="tim-icons icon-calendar-60"></i>
                                                </div>
                                            </div>
                                            <input asp-for="Input.Age" placeholder="Година на раждане" class="form-control">
                                            <span asp-validation-for="Input.Age" class="text-danger"></span>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="tim-icons icon-square-pin"></i>
                                                </div>
                                            </div>
                                            <input asp-for="Input.City" placeholder="Град" class="form-control">
                                            <span asp-validation-for="Input.City" class="text-danger"></span>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="tim-icons icon-lock-circle"></i>
                                                </div>
                                            </div>
                                            <input asp-for="Input.Password" class="form-control" placeholder="Парола">
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="tim-icons icon-lock-circle"></i>
                                                </div>
                                            </div>
                                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Потвърдете паролата">
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <input type="hidden" asp-for="Input.Token" />
                                        <div class="form-check text-left">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="checkbox">
                                                <span class="form-check-sign"></span>
                                                I agree to the
                                                <a href="javascript:void(0)">terms and conditions</a>.
                                            </label>
                                            <hr />
                                        </div>
                                        <button type="submit" class="btn btn-primary">Регистрация</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<div class="register-bg"></div>*@
                    <div id="square1" class="square square-1"></div>
                    <div id="square2" class="square square-2"></div>
                    <div id="square3" class="square square-3"></div>
                    <div id="square4" class="square square-4"></div>
                    <div id="square5" class="square square-5"></div>
                    <div id="square6" class="square square-6"></div>
                </div>
            </div>
        </div>
    </div>
</div>




