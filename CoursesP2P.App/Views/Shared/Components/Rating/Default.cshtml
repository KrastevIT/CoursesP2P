@model RatingViewModel

<form asp-controller="Students" asp-action="Rating" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="">
            <span class="rating">
                @for (int i = 1; i <= 5; i++)
                {
                    var starClass = "star";
                    if (Model.Rating == 6 - i)
                    {
                        starClass += " active";
                    }
                    <span data-value="@(6 - i)" class="@starClass"></span>
                }
            </span>
        </div>
        <input type="hidden" asp-for="@Model.StudentId" />
        <input type="hidden" asp-for="@Model.CourseId" />
        <input type="hidden" asp-for="@Model.Rating" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-sm btn-primary" value="Vote" />
    </div>
</form>


@section Scripts {
    <script src="~/js/rating.js"></script>
}
