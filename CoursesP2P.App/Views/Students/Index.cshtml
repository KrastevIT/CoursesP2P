@model IEnumerable<CourseEnrolledViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center">Моите курсове</h1>

    @if (Model.Count() == 0)
    {
        <div class="card text-center">
            <div class="card-header">
                <h1>Все още нямаш курсове :(</h1>
            </div>
        </div>
    }

    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4">
                <figure class="card card-coin card-plain">
                    <a asp-area="" asp-controller="Lectures" asp-action="Index" asp-route-id="@course.Id">
                        <div class="img-wrap">
                            <img src="@course.Image">
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    @if (course.Name.Length > 29)
                                    {
                                        <h4 rel="tooltip" title="@course.Name">@course.ShortName</h4>
                                    }
                                    else
                                    {
                                        <h4>@course.Name</h4>
                                    }
                                    <h5>от @course.InstructorFullName</h5>
                                    <hr class="line-primary">
                                </div>
                            </div>
                            <div class="row">
                                <ul class="list-group">
                                    <li class="list-group-item">@Html.DisplayFor(e => course.Category)</li>
                                    <li class="list-group-item">@course.Lectures.Count Лекции</li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            @*<a asp-controller="Lectures" asp-action="Index" asp-route-id="@course.Id" class="btn btn-sm btn-outline-info">Виж лекциите</a>*@
                        </div>
                    </a>
                </figure>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/rating.js"></script>
}
