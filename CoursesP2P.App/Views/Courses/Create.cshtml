@model CreateCourseBindingModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form enctype="multipart/form-data" asp-controller="Courses" asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Description"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Price"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control"></select>
            <span asp-validation-for="Category"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="col-sm-2"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Image" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}












