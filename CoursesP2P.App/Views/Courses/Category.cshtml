@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Category";
}

<div class="container">
    @if (Model.Count() == 0)
    {
        <div class="card text-center">
            <div class="card-header">
                <h1>Все още няма курсове :(</h1>
            </div>
            <div class="card-body">
                <h2 class="card-title">Бъди първи и добави курс за  @this.ViewData["category"]</h2>
            </div>
            <div class="card-footer text-muted">
                <a asp-area="" asp-controller="Instructors" asp-action="Index" asp- class="btn btn-info">Започни сега</a>

            </div>
        </div>
    }
    <partial name="_CoursesPartial" />
</div>