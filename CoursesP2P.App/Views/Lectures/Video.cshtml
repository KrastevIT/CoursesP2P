@model VideoViewModel
@{
    ViewData["Title"] = "Video";
}

    <div class="container">
        <h1 class="my-4">
            <small>@Model.Name</small>
        </h1>
        <div class="row">
            <div class="col-md-8">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="@Model.VideoPath" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-md-4">
                <h3 class="my-3">Description</h3>
                <p>@Model.Description</p>
                <h3 class="my-3">What you'll learn</h3>
                <ul>
                    <li>Lorem Ipsum</li>
                    <li>Dolor Sit Amet</li>
                    <li>Consectetur</li>
                    <li>Adipiscing Elit</li>
                </ul>
            </div>
        </div>
    </div>

