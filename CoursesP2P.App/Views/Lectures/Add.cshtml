@model AddLecturesBindingModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add Lectures</h1>

<form enctype="multipart/form-data" asp-controller="Lectures" asp-action="Add" asp-route-id="@ViewBag.id" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Video" class="col-sm-2"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="@Model.Video"/>
                <span asp-validation-for="@Model.Video"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Add" class="btn btn-success" />
            <a asp-controller="Instructors" asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}