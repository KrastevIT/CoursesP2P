@model AddLecturesBindingModel
@{
    ViewData["Title"] = "Add";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h1>@this.ViewData["t"]</h1>

<div class="d-flex justify-content-center">
    <form enctype="multipart/form-data" class="form-horizontal">
        <h1 class="text-center">Добави нова лекция</h1>
        <input type="hidden" asp-for="@Model.CourseId" id="courseId" />
        <div class="form-group">
            <label class="control-label col-sm-2">Име</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name" id="nameId" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="uploadOuter">
            <label for="uploadFile" class="btn btn-primary">Качи видео до 1 ГБ</label>
            <strong>ИЛИ</strong>
            <span class="dragBox">
                Darg and Drop video here
                <input asp-for="@Model.Video" type="file" onChange="changeVideo(this)" ondragover="drag()" ondrop="drop()" id="uploadFile" />
            </span>
        </div>
        <div id="PostVideo"></div>

        <hr />
        <div class="form-group">
            <div class="col-sm-10 col-sm-push-2">
                <input type="submit" value="Добави" id="saveId" class="btn btn-info" />
                <a asp-controller="Instructors" asp-action="Index" class="btn btn-danger">Назад</a>
            </div>
        </div>
    </form>
</div>

<div id="overlay" style="display: none;">
    <div class="cv-spinner">
        <span class="spinner"></span>
    </div>
</div>

