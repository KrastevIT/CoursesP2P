@model IEnumerable<LectureViewModel>
@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="~/css/lectures-index.css" rel="stylesheet" />
</head>

<body>
    <section class="services-area pt-100 pb-70" id="services">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 mx-auto text-center">
                    <div class="section-title">
                        <h4>Lectures</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var lecture in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-service">
                            <a asp-controller="Lectures" asp-action="Video" asp-route-id="@lecture.Id"><i class="fa fa-video"></i></a>
                            <h4>@lecture.Name</h4>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</body>