@model CourseEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="text-center">Редактирай Курс или Лекция</h1>
    <br />
    <br />

    <div class="row">
        <div class="col-6 col-md-4">
            <figure class="card card-coin card-plain">
                <form asp-controller="Instructors" asp-action="Edit" method="post">
                    <div class="img-wrap"><img src="@Model.Image" style="width:348px;height:220px;"></div>
                    <div class="card-body">

                        <h5 class="text-uppercase text-center">Име</h5>
                        <hr class="line-primary">
                        <input class="form-control" asp-for="@Model.Name" />
                        <br />
                        <h5 class="text-uppercase text-center">Описание</h5>
                        <hr class="line-primary">
                        <input class="form-control" asp-for="@Model.Description" />
                        <br />
                        <h5 class="text-uppercase text-center">Категория</h5>
                        <hr class="line-primary">
                        <select asp-for="Category" asp-items="Html.GetEnumSelectList<CategoryViewModel>()" class="form-control text-body"></select>
                        <br />
                        <h5 class="text-uppercase text-center">Цена</h5>
                        <hr class="line-primary">
                        <input class="form-control" asp-for="@Model.Price" />
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-push-2">
                            <input type="submit" value="Редактирай" class="btn btn-sm btn-success" />
                            <a asp-controller="Instructors" asp-action="Index" class="btn btn-sm btn-danger">Назад</a>
                        </div>
                    </div>
                </form>
            </figure>
        </div>

        @* TODO *@
        <div class="col-12 col-sm-6 col-md-8">
            <div class="list-group">
                @foreach (var lecturesName in Model.Lectures)
                {
                    <a href="#" class="list-group-item list-group-item-action text-center">@lecturesName.Name</a>
                }
            </div>
        </div>
    </div>
</div>