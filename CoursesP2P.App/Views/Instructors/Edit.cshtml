@model CourseEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="text-center">Edit Course or Lectures</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-6 col-md-4">
            <figure class="card card-product">
                <form asp-controller="Instructors" asp-action="Edit" method="post">
                    <div class="img-wrap"><img src="@Model.Image" style="width:348px;height:220px;"></div>
                    <figcaption class="info-wrap">
                        <h5>Name</h5>
                        <input class="form-control" asp-for="@Model.Name" />
                        <h5>Description</h5>
                        <input class="form-control" asp-for="@Model.Description" />
                        <h5>Category</h5>
                        <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control"></select>
                        <h5>Price</h5>
                        <input class="form-control" asp-for="@Model.Price" />
                    </figcaption>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-push-2">
                            <input type="submit" value="Update" class="btn btn-sm btn-outline-success" />
                            <a asp-controller="Instructors" asp-action="Index" class="btn btn-sm btn-outline-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </figure>
        </div>

        @* TODO *@
        <div class="col-12 col-sm-6 col-md-8">
            <div class="list-group">
                @foreach (var lecturesName in Model.Lectures)
                {
                    <a href="#" class="list-group-item list-group-item-action text-center">@lecturesName.Name</a>
                }
            </div>
        </div>
    </div>
</div>