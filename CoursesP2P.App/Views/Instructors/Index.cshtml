@model IEnumerable<CourseInstructorViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <a asp-controller="Courses" asp-action="Create" class="btn btn-success btn-lg">Create new course</a>
    <br />
    <br />

    @if (!Model.Any())
    {
        <h2>Not Found Courses</h2>
        return;
    }

    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4">
                <figure class="card card-product">
                    <div class="img-wrap"><img src="@course.Image" style="width:348px;height:220px;"></div>
                    <figcaption class="info-wrap">
                        <h4 class="title">@course.Name</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@course.Category</li>
                            <li class="list-group-item">Lectures 0</li>
                        </ul>
                        <div class="rating-wrap">
                            <div class="label-rating">132 reviews</div>
                            <div class="label-rating">154 orders </div>
                        </div>
                    </figcaption>
                    <div class="bottom-wrap">
                        <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-outline-danger float-right">Edit Course</a>
                        <a asp-controller="Lectures" asp-action="Add" asp-route-id="@course.Id" class="btn btn-sm btn-outline-success float-right">Add Lecture</a>
                        <div class="price-wrap h5">
                            <span class="price-new">$@course.Price</span>
                        </div>
                    </div>
                </figure>
            </div>
        }
    </div>
</div>
