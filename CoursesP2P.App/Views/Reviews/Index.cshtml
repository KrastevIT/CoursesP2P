@model ReviewBindingModel
@{
    ViewData["Title"] = "Add";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<div id="alert" role="alert"></div>

<div class="d-flex justify-content-center">
    <div class="form-horizontal">
        <h4 class="text-center">Добави видео ревю</h4>
        <input type="hidden" asp-for="@Model.CourseId" id="courseId" />
        <div class="uploadOuter">
            <label for="uploadFile" class="btn btn-primary">Качи видео до 1 ГБ</label>
            <strong>ИЛИ</strong>
            <span class="dragBox">
                Постави тук видеото.
                <input asp-for="@Model.Video" type="file" id="uploadFile" />
            </span>
        </div>
        <div id="vName" class="col-sm-10">
            <label class="text-success" id="label"></label>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-sm-10 col-sm-push-2 text-center">
                <input type="submit" value="Добави" id="saveId" class="btn btn-info" />
                <a asp-controller="Instructors" asp-action="Index" class="btn btn-danger">Назад</a>
            </div>
        </div>
    </div>
</div>

<script>
    $('#uploadFile').on('change', function () {
        let file_path = document.getElementById('uploadFile').value;
        let file_name = file_path.split(/(\\|\/)/g).pop();

        let label = document.getElementById("label");
        label.textContent = file_name;
    });
</script>


<script type="text/javascript">
    $(document).ready(function () {

        $('#saveId').on('click', function () {

            var data = new FormData();

            var files = $("#uploadFile").get(0).files;

            if (files.length > 0) {
                data.append("Video", files[0]);
                data.append("CourseId", $("#courseId").val());

                let div = document.getElementById("alert");
                div.setAttribute("class", "alert alert-success");
                div.innerHTML = `Успешно добавихте ревю.То ще бъде обработено и до няколко минути ще го видите в курса си.`;
            }

            var ajaxRequest = $.ajax({
                type: "POST",
                url: '/Reviews/Add',
                data: data,
                datatype: "html",
                contentType: false,
                processData: false,
            });

            ajaxRequest.done(function (x) {
                let div = document.getElementById("alert");
                if (x === 'invalid') {
                    div.setAttribute("class", "alert alert-danger");
                    div.innerHTML = 'Неуспешно добаване на ревю!';
                }
            });
        });
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
