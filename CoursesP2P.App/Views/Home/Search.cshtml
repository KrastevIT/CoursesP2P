@model List<CourseViewModel>
@{
    ViewData["Title"] = "Search";
}

<div class="container">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4">
                <figure class="card card-product">
                    <div class="img-wrap">
                        <a href="@Url.Action("Details", "Courses", new { id=course.Id})">
                            <img src="@course.Image" style="width:348px;height:220px;">
                        </a>
                    </div>
                    <figcaption class="info-wrap">
                        <h4 class="title">@course.Name</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">by @course.InstructorFullName</li>
                            <li class="list-group-item">@course.Category</li>
                            <li class="list-group-item">Lectures 0</li>
                        </ul>
                        <div class="rating-wrap">
                            <div class="label-rating">132 reviews</div>
                            <div class="label-rating">154 orders </div>
                        </div>
                    </figcaption>
                    <div class="bottom-wrap">
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-outline-info float-right">Details</a>
                        <a asp-controller="Courses" asp-action="Add" asp-route-id="@course.Id" class="btn btn-sm btn-outline-danger float-right">Order Now</a>
                        <div class="price-wrap h5">
                            <span class="price-new">$@course.Price</span>
                        </div>
                    </div>
                </figure>
            </div>
        }
    </div>
</div>

