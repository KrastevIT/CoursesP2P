@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="container">
    <div class="row mt-3">
        @foreach (var course in Model)
        {
            <div class="col mt-3">
                <div class="card bg-light text-center" style="width: 18rem;">
                    <img class="w-100" src="@course.Image" alt="Card image cap" style="width:286px;height:180px;">
                    <div class="card-body">
                        <h5 class="card-title">@course.Name</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">by @course.InstructorFullName</li>
                        <li class="list-group-item">@course.Category</li>
                        <li class="list-group-item">Lectures 0</li>
                        <li class="list-group-item">Price @course.Price $</li>
                    </ul>
                    <div class="card-body">
                        <a asp-controller="Courses" asp-action="Add" asp-route-id="@course.Id" class="btn btn-outline-danger">Buy</a>
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">
        Page Heading
        <small>Secondary Text</small>
    </h1>

    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <a href="#"><img class="w-100" src="@course.Image" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a class="post-title" href="#">@course.Name</a>
                        </h4>
                        @*<p class="card-text">by @course.InstructorFullName</p>*@
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">by @course.InstructorFullName</li>
                            <li class="list-group-item">@course.Category</li>
                            <li class="list-group-item">Lectures 0</li>
                            <li class="list-group-item">Price @course.Price $</li>
                        </ul>
                        <div class="card-body">
                            <a asp-controller="Courses" asp-action="Add" asp-route-id="@course.Id" class="btn btn-outline-danger">Buy</a>
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-info">Details</a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

