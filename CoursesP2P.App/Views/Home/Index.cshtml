@model HomeInfoAndCoursesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="wrapper">
    <div class="section">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-5 mb-5 mb-lg-0 ">
                    <h1 class="text-white font-weight-light">Shape the future of learning with us</h1>
                    <p class="text-white mt-4">Get the latest skills in leading industries with on-demand, expert-led courses</p>
                    <a href="/Identity/Account/Register" class="btn btn-warning mt-4">Start Now</a>
                </div>
                <div class="col-lg-6">
                    <div id="carouselExampleControls" class="carousel slide">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/background/YouAreYourOnlyLimit.jpg" style="width:540px;height:360px;" alt="First slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <i class="tim-icons icon-minimal-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <i class="tim-icons icon-minimal-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="section section-lg">
    <section class="section">
        <img src="../assets/img/path4.png" class="path">
        <div class="container">
            <div class="row row-grid justify-content-between">
                <div class="col-md-5 mt-lg-5">
                    <div class="row">
                        <div class="col-lg-6 col-sm-12 px-2 py-2">
                            <div class="card card-stats ">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-5 col-md-4">
                                            <div class="icon-big text-center icon-warning">
                                                <i class="fas fa-graduation-cap text-warning"></i>
                                            </div>
                                        </div>
                                        <div class="col-7 col-md-8">
                                            <div class="numbers">
                                                <p class="card-title">@Model.Students
                                                <p>
                                                <p class="card-category">Students</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12 px-2 py-2">
                            <div class="card card-stats upper bg-default">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-5 col-md-4">
                                            <div class="icon-big text-center icon-warning">
                                                <i class="fas fa-chalkboard-teacher text-white"></i>
                                            </div>
                                        </div>
                                        <div class="col-7 col-md-8">
                                            <div class="numbers">
                                                <p class="card-title">@Model.Instructors
                                                <p>
                                                <p class="card-category">Instructors</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-sm-12 px-2 py-2">
                            <div class="card card-stats ">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-5 col-md-4">
                                            <div class="icon-big text-center icon-warning">
                                                <i class="fas fa-brain text-info"></i>
                                            </div>
                                        </div>
                                        <div class="col-7 col-md-8">
                                            <div class="numbers">
                                                <p class="card-title">@Model.Courses
                                                <p>
                                                <p class="card-category">Courses</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12 px-2 py-2">
                            <div class="card card-stats ">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-5 col-md-4">
                                            <div class="icon-big text-center icon-warning">
                                                <i class="tim-icons icon-video-66 text-success"></i>
                                            </div>
                                        </div>
                                        <div class="col-7 col-md-8">
                                            <div class="numbers">
                                                <p class="card-title">@Model.Lectures
                                                <p>
                                                <p class="card-category">Lectures</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="pl-md-5">
                        <h1>
                            Inspire
                            <br />students
                        </h1>
                        <p>Help people learn new skills, advance their careers, and explore their hobbies by sharing your knowledge. </p>
                        <br />
                        <p>Take advantage of our active community of instructors to help you through your course creation process.</p>
                        <br />
                        <a href="Instructors/Index" class="font-weight-bold text-info mt-5">DO IT <i class="tim-icons icon-minimal-right text-info"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<div>
    <img src="../assets/img/path3.png" class="path">
    <div class="container">
        <div class="row">
            @foreach (var course in Model.AllCourses)
            {
                <div class="col-md-4">
                    <figure class="card card-coin card-plain">
                        <div class="img-wrap">
                            <a href="@Url.Action("Details", "Courses", new { id=course.Id})">
                                <img src="@course.Image" style="width:348px;height:220px;">
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <h4 class="text-uppercase">@course.Name</h4>
                                    <h5>by @course.InstructorFullName</h5>
                                    <hr class="line-primary">
                                </div>
                            </div>
                            <div class="row">
                                <ul class="list-group">
                                    <li class="list-group-item">@course.Category</li>
                                    <li class="list-group-item">@course.Lectures.Count Lectures</li>
                                    <li class="list-group-item">@course.Orders Orders</li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-success btn-sm btn-simple float-right">Details</a>
                            <a asp-controller="Students" asp-action="Add" asp-route-id="@course.Id" class="btn btn-warning btn-sm btn-simple float-right">Buy</a>
                            <h3>$@course.Price</h3>
                        </div>
                    </figure>
                </div>
            }
        </div>
    </div>
</div>





