@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<div class="wrapper">
    <div class="section">
        <div class="row justify-content-center">
            <div class="text-center">
                <h1 class="text-white font-weight-light">Shape the future of learning with us</h1>
                <p class="text-white mt-4">Get the latest skills in leading industries with on-demand, expert-led courses</p>
                @if (!this.User.Identity.IsAuthenticated)
                {
                    <a href="/Identity/Account/Register" class="btn btn-warning mt-4">Start Now</a>
                }
            </div>
        </div>
    </div>
</div>

<vc:home-all-info></vc:home-all-info>
<div>
    @*<img src="../assets/img/path3.png" class="path">*@
    <div class="container">
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-4">
                    <figure class="card card-coin card-plain">
                        <div class="img-wrap">
                            <a href="@Url.Action("Details", "Courses", new { id=course.Id})">
                                <img src="@course.Image" style="width:348px;height:220px;">
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    @if (course.Name.Length > 29)
                                    {
                                        <h4 class="text-uppercase" rel="tooltip" title="@course.Name">@course.ShortName</h4>
                                    }
                                    else
                                    {
                                        <h4 class="text-uppercase">@course.Name</h4>
                                    }
                                    <h5>by @course.InstructorFullName</h5>
                                    <hr class="line-primary">
                                </div>
                            </div>
                            <div class="row">
                                <ul class="list-group">
                                    <li class="list-group-item">@course.Category</li>
                                    <li class="list-group-item">@course.Lectures.Count Lectures</li>
                                    <li class="list-group-item">@course.Orders Orders</li>
                                    <li class="list-group-item text-danger">&euro; @course.Price</li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer text-left">
                            <vc:five-stars course-id="@course.Id"></vc:five-stars>
                            @*<a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-success btn-sm btn-simple">Details</a>*@
                        </div>
                    </figure>
                </div>
            }
        </div>
    </div>
</div>