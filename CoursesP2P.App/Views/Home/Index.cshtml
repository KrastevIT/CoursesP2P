@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="container">
    <div class="row mt-3">
        @foreach (var course in Model)
        {
            <div class="col mt-3">
                <div class="card bg-light text-center" style="width: 18rem;">
                    <img class="card-img-top" src="@course.Image" alt="Card image cap" style="width:286px;height:180px;">
                    <div class="card-body">
                        <h5 class="card-title">@course.Name</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">by @course.LecturerFullName</li>
                        <li class="list-group-item">@course.Category</li>
                        <li class="list-group-item">Lectures 0</li>
                        <li class="list-group-item">Price @course.Price $</li>
                    </ul>
                    <div class="card-body">
                        <a asp-controller="Courses" asp-action="Add" asp-route-id="@course.Id" class="btn btn-success">Buy</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


